<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="20dip"
    android:padding="20dip"
    android:background="@color/white"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="用药提醒"
        android:textColor="@color/black_overlay"
        android:textSize="22sp" />
    
    <ImageView   
        android:layout_width="fill_parent"  
        android:layout_height="1dp"  
        android:background="@color/grey"  
        />  

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dip"
        android:gravity="center_vertical" >

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/pill" />

        <TextView
            android:id="@+id/medicine_notifiction_medication_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dip"
            android:text="感冒药"
            android:textColor="@color/black" />
    </LinearLayout>

    <TextView
        android:id="@+id/medicine_notifiction_alert_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dip"
        android:text="定于  9：30"
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/medicine_notifiction_fysl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dip"
        android:text="服用1粒"
        android:textColor="@color/black" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dip" >

        <Button
            android:id="@+id/medicine_notifiction_tg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="跳过"
            android:background="@color/white"
            android:textColor="@color/grey" />

        <Button
            android:id="@+id/medicine_notifiction_ks"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="延迟"
            android:background="@color/white"
            android:textColor="@color/grey" />

        <Button
            android:id="@+id/medicine_notifiction_fy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="服用"
            android:background="@color/white"
            android:textColor="@color/color_41BC6C" />

        <Button
            android:id="@+id/medicine_notifiction_cxsd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:text="重置"
            android:textColor="@color/grey" />
    </LinearLayout>

</LinearLayout>