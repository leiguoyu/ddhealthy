<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <RelativeLayout style="@style/top_layout" >

        <TextView
            android:id="@+id/textView1"
            style="@style/top_layout_title"
            android:text="症状程度" />

        <TextView
            android:id="@+id/symptom_setting_back"
            style="@style/top_layout_back"
            android:background="@drawable/back" />

        <RadioButton
            android:id="@+id/symptom_setting_more"
            style="@style/top_layout_more"
            android:button="@null"
            android:text="保存"
            android:textColor="@color/white" />
    </RelativeLayout>

    <RadioGroup
        android:id="@+id/radioGroup1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dip"
        android:layout_weight="0"
        android:orientation="horizontal"
        android:paddingLeft="20dip"
        android:paddingRight="20dip" >

        <RadioButton
            android:id="@+id/symptom_setting_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/color_41BC6C"
            android:button="@null"
            android:checked="true"
            android:drawableRight="@drawable/spinner_icon"
            android:padding="10dip"
            android:text="时间选择"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <RadioButton
            android:id="@+id/symptom_setting_history_symptom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dip"
            android:layout_weight="1"
            android:background="@color/color_41BC6C"
            android:button="@null"
            android:drawableRight="@drawable/spinner_icon"
            android:padding="10dip"
            android:text="历史病症"
            android:textColor="@color/white"
            android:textSize="16sp" />
    </RadioGroup>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dip"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/symptom_setting_date_time_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="2015年9月15日23时28分"
            android:textColor="@color/black_overlay"
            android:textSize="18sp" />

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dip"
            android:animateLayoutChanges="true"
            android:columnCount="4" >

            <TextView
                android:id="@+id/symptom_setting_body_part"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="我的腰部"
                android:textColor="@color/color_41BC6C"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/symptom_setting_symptom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dip"
                android:text="呕血与黑便"
                android:textColor="@color/color_41BC6C"
                android:textSize="18sp" />
        </GridLayout>

        <GridLayout
            android:id="@+id/symptom_setting_add_cd_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dip"
            android:animateLayoutChanges="true"
            android:columnCount="4" >
        </GridLayout>
    </LinearLayout>

    <EditText
        android:id="@+id/symptom_setting_explain"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dip"
        android:layout_marginRight="20dip"
        android:cursorVisible="true"
        android:ems="10"
        android:hint="补充说明"
        android:inputType="textMultiLine"
        android:padding="15dip"
        android:textColor="@color/black_overlay"
        android:textCursorDrawable="@drawable/color_cursor"
        android:textSize="16sp" >
    </EditText>

    <TableRow
        android:id="@+id/tableRow1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dip"
        android:layout_marginRight="20dip"
        android:layout_marginTop="20dip"
        android:layout_weight="0" >

        <TextView
            android:id="@+id/symptom_setting_yyzt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/textview_border"
            android:gravity="center"
            android:paddingBottom="5dip"
            android:paddingTop="5dip"
            android:text="隐隐作痛"
            android:textColor="@color/black_overlay"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/symptom_setting_kyrs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/textview_border"
            android:gravity="center"
            android:paddingBottom="5dip"
            android:paddingTop="5dip"
            android:text="可以忍受"
            android:textColor="@color/black_overlay"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/symptom_setting_nyrs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/textview_border"
            android:gravity="center"
            android:paddingBottom="5dip"
            android:paddingTop="5dip"
            android:text="难以忍受"
            android:textColor="@color/black_overlay"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/symptom_setting_cxjd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/textview_border"
            android:gravity="center"
            android:paddingBottom="5dip"
            android:paddingTop="5dip"
            android:text="持续较短"
            android:textColor="@color/black_overlay"
            android:textSize="16sp" />
    </TableRow>

    <TableRow
        android:id="@+id/tableRow2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dip"
        android:layout_marginRight="20dip"
        android:layout_marginTop="20dip"
        android:layout_weight="0" >

        <TextView
            android:id="@+id/symptom_setting_cxjc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/textview_border"
            android:gravity="center"
            android:paddingBottom="5dip"
            android:paddingTop="5dip"
            android:text="持续较长"
            android:textColor="@color/black_overlay"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/symptom_setting_cxbd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/textview_border"
            android:gravity="center"
            android:paddingBottom="5dip"
            android:paddingTop="5dip"
            android:text="持续不断"
            android:textColor="@color/black_overlay"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/symptom_setting_dyccj"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/textview_border"
            android:gravity="center"
            android:paddingBottom="5dip"
            android:paddingTop="5dip"
            android:text="第一次觉察"
            android:textColor="@color/black_overlay"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/symptom_setting_jjtfx"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/textview_border"
            android:gravity="center"
            android:paddingBottom="5dip"
            android:paddingTop="5dip"
            android:text="近几天发现"
            android:textColor="@color/black_overlay"
            android:textSize="16sp" />
    </TableRow>

    <TableRow
        android:id="@+id/tableRow3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dip"
        android:layout_marginRight="20dip"
        android:layout_marginTop="20dip"
        android:layout_weight="0" >

        <TextView
            android:id="@+id/symptom_setting_jjzfx"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/textview_border"
            android:gravity="center"
            android:paddingBottom="5dip"
            android:paddingTop="5dip"
            android:text="近几周发现"
            android:textColor="@color/black_overlay"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/symptom_setting_oefz"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/textview_border"
            android:gravity="center"
            android:paddingBottom="5dip"
            android:paddingTop="5dip"
            android:text="偶尔发作"
            android:textColor="@color/black_overlay"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/symptom_setting_jcfz"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/textview_border"
            android:gravity="center"
            android:paddingBottom="5dip"
            android:paddingTop="5dip"
            android:text="经常发作"
            android:textColor="@color/black_overlay"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/symptom_setting_more111"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text=""
            android:textColor="@color/black_overlay"
            android:textSize="16sp" />
    </TableRow>

</LinearLayout>